<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" method="upgrade" version="2.5.0">
	<name>googleSearch (CSE)</name>
	<author>kksou</author>
	<creationDate>April 2011</creationDate>
	<copyright>(C) kksou.com. All Rights Reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>support@kksou.com</authorEmail>
	<authorUrl>www.kksou.com/php-gtk2/</authorUrl>
	<version>2.5</version>
	<description>This component allows you to add Google's new Custom Search Engine (CSE) to your Joomla site with the search results displayed right inside your Joomla page!</description>

	<files folder="components/com_googlesearchcse">
		<filename>googlesearchcse.php</filename>
		<filename>googlesearch.lib.php</filename>
		<filename>views/googleSearch/tmpl/default.xml</filename>
		<filename>index.html</filename>
	</files>

	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.mysql.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.mysql.sql</file>
		</sql>
	</uninstall>

	<administration>
		<menu link="option=com_googlesearchcse">googleSearch (CSE)</menu>
		<files folder="administrator/components/com_googlesearchcse">
			<filename>googlesearchcse.php</filename>
			<filename>admin.googlesearchcse.html.php</filename>
			<filename>admin.googlesearch.lib.php</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>install.mysql.sql</filename>
			<filename>manifest.xml</filename>
			<filename>uninstall.mysql.sql</filename>
			<filename>tables/googlesearchcse.php</filename>
			<filename>gif/google_cse0.gif</filename>
			<filename>gif/google_cse1.gif</filename>
			<filename>gif/google_cse2.gif</filename>
			<filename>gif/google_cse0b.gif</filename>
			<filename>gif/google_cse1b.gif</filename>
			<filename>gif/google_cse2b.gif</filename>
		</files>
	</administration>
</install>